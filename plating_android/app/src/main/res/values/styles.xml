<resources>
    <style name="AppTheme" parent="AppTheme.Base">

    </style>
    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorSecondary</item>
        <item name="android:textColor">@color/grey_700</item>
    </style>

    <style name="CustomToolBarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:actionBarSize">48dp</item>
        <item name="actionBarSize">48dp</item>
        <item name="android:windowContentOverlay">@drawable/actionbar_shadow</item>
    </style>

    <style name="Theme.WelcomeActivity" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_screen_ver_3</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    
    <style name="Theme.LoginActivity" parent="AppTheme">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="foodRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/food_rating_bar_full</item>
    </style>

    <!--BUTTON STYLES-->
    <style name="AreaButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@drawable/button_location_setting_activity_area_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="ReviewStarSize">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <style name="ReviewStarSize_Big">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="ReviewStarSize_Very_Big">
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
    </style>

    <style name="reviewRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/review_star_layout_design</item>
        <item name="android:minHeight">14dip</item>
        <item name="android:maxHeight">14dip</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="coupon_title_font">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>
