<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/border_set"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView_use_check"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:src="@drawable/address_check_yes" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_weight="6"
        android:orientation="vertical">

        <TextView
            android:paddingTop="5dp"
            android:id="@+id/textView_addr1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Address1"
            android:textColor="@color/usual_main_text_black" />

        <TextView
            android:paddingBottom="5dp"
            android:id="@+id/textView_addr2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Address2"
            android:textColor="#d4d4d4"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textview_delete"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:text="X"
        android:textSize="20sp"
        android:textColor="@color/usual_main_text_black"
        android:textStyle="bold" />
</LinearLayout>
