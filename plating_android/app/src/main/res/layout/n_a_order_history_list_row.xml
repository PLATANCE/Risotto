<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="80dp"
    android:background="@color/app_card_background_grey_color">

    <TextView
        android:id="@+id/order_number"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginLeft="16dp"
        android:text="#1"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="62dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/order_history_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_700"
            android:textSize="13dp"
            android:text="Mon 10/20" />

        <TextView
            android:id="@+id/order_history_address"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_below="@id/order_history_date"
            android:textSize="12dp"
            android:textColor="@color/grey_600"
            android:text="서울특별시 강남구 대치동 미도아파트 207동 1206호" />

    </LinearLayout>

    <TextView
        android:id="@+id/order_history_order_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textSize="12dp"
        android:textColor="@color/grey_700"
        android:text="5:00PM~5:30PM" />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/plating_divider_color"/>
</RelativeLayout>