<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.plating.pages.i_set_location.SetLocationActivity">

    <RelativeLayout
        android:id="@+id/tool_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="horizontal">

        <include
            android:id="@+id/tool_bar"
            layout="@layout/tool_bar" />

        <ImageButton
            android:id="@+id/tool_bar_backIB"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:background="@color/transparent"
            android:onClick="onClickNavigateBack"
            android:padding="14dp"
            android:scaleType="fitXY"
            android:src="@drawable/action_icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="요리가 배달될 주소 입력"
            android:textColor="@color/white"
            android:textSize="15dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tool_bar_layout">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/address_search"/>

        <EditText
            android:id="@+id/set_location_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="15dp"
            android:paddingLeft="30dp"
            android:hint="동명(읍,면)을 입력해주세요 예)신사, 신사동"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:textSize="14dp" />

        <RelativeLayout
            android:id="@+id/search_delivery_coverage"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_height="30dp"
            android:layout_below="@id/set_location_edit_text">

            <ImageButton
                android:id="@+id/put_to_cart_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:scaleType="centerCrop"
                android:src="@drawable/shape_button_rounded_corner_2dp_color_primary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="배달 가능 지역 보기"
                android:textColor="@color/white"
                android:textSize="12dp" />
        </RelativeLayout>


        <android.support.v7.widget.RecyclerView

            android:id="@+id/available_location_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/search_delivery_coverage"
            android:layout_marginTop="6dp"
            android:visibility="visible" />
    </RelativeLayout>

</RelativeLayout>
